$(error Please define BSL_HAL_TYPE)
endif

include $(OUTPUT_DIR)/mk/pre.mk

CPPFLAGS := -I. $(CPPFLAGS)

LIBS := bsl ihex log

$(eval $(call ADD_HDRS_ALL,log,,log))

$(eval $(call ADD_LIB,bsl,bsl/src bsl/hal/$(BSL_HAL_TYPE)))
$(eval $(call ADD_LIB,ihex,ihex))
$(eval $(call ADD_LIB,log,log))

$(eval $(call ADD_PROG,msp-mon-prog,main.c,$$(LIBS)))

include $(OUTPUT_DIR)/mk/post.mk
